{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "hardhat",
      "@nomicfoundation/hardhat-ethers"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
